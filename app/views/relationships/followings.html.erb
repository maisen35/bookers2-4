<div class="container">
  <div class="row">
    <div class="col">
      <table class="table">
        <tr>
          <th></th>
          <th>名前</th>
          <th>フォロワー</th>
          <th>フォロー</th>
          <th></th>
        </tr>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= image_tag user.get_profile_image, size: '40x40' %>
              </td>
              <td><%= user.name %></td>
              <td>
                <%= user.followers.count %>
              </td>
              <td>
                <%= user.followings.count %>
              </td>
              <td>
                <%= link_to 'show', user_path(user) %>
              </td>
            </tr>
          <% end %>
      </table>
    </div>
  </div>
</div>