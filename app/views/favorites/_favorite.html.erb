<% if book.favorited_by?(current_user) %>
  <%= link_to book_favorite_path(book), remote: true, method: :delete do %>
    <i class="fas fa-heart text-danger"></i>
  <% end %>
<% else %>
  <%= link_to book_favorite_path(book), remote: true, method: :post do %>
    <i class="far fa-heart"></i>
  <% end %>
<% end %>
